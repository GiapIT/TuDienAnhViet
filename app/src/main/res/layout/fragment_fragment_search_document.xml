<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cpb_grey"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size_30dp"
        android:background="@color/cpb_grey"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10dp"
            android:text="@string/message_traslator_document"
            android:textColor="@color/cpb_red"
            android:textSize="@dimen/text_size_18dp" />

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shaptranslator"
            android:minHeight="@dimen/minHeight_translator"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_inputText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="left|top"
                android:textColor="@color/TextTitle"
                android:textSize="@dimen/text_size_18dp" />

            <LinearLayout
                android:id="@+id/btnGoogle"
                android:background="@drawable/selectbutton_white"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_width="@dimen/size_30dp"
                android:layout_height="@dimen/size_30dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/microphone" />
            </LinearLayout>

            <ImageView
                android:id="@+id/btnDeleteText"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/select_delete"
                android:src="@drawable/ic_cross_mark1"
                android:textColor="@color/TextTitle"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnTranslator_AV"
                android:layout_width="150dp"
                android:layout_height="@dimen/size_35dp"
                android:background="@drawable/background_circle_"
                android:gravity="center"
                android:text="@string/e_v"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18dp" />

            <View
                android:layout_width="@dimen/size_30dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/btnTranslator_VA"
                android:layout_width="150dp"
                android:layout_height="@dimen/size_35dp"
                android:background="@drawable/background_circle_"
                android:gravity="center"
                android:text="@string/v_a"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18dp" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shaptranslator"
            android:minHeight="@dimen/minHeight_translator"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_OutputText"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:gravity="left|top"
                android:inputType="textMultiLine"
                android:minHeight="80dp"
                android:textColor="@color/TextTitle"
                android:textSize="@dimen/text_size_18dp" />

            <ImageView
                android:id="@+id/btnCoppy"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/selector_sound"
                android:padding="5dp"
                android:src="@drawable/copy" />

        </RelativeLayout>


    </LinearLayout>

</ScrollView>
