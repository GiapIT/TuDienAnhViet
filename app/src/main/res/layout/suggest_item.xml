<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/selector_item_listview"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/selector_item_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:visibility="gone"
            android:id="@+id/suggestion_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:focusable="false"
            android:paddingLeft="@dimen/search_icon_padding"
            android:paddingRight="@dimen/search_icon_padding"
            android:src="@drawable/ic_magnifier13" />
       <!-- <TextView
            android:text="dasdasd"
            android:id="@+id/suggestion_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:focusable="false"
            android:paddingBottom="3dp"
            android:paddingRight="@dimen/search_view_text_padding"
            android:paddingTop="3dp"
            android:textColor="#727272"
            android:textSize="16sp" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/SimplePresent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:text="arise"
                android:textColor="@color/black"
                android:textSize="11sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="17dp"
                android:layout_marginTop="17dp"
                android:background="@color/TextTitle" />

            <TextView
                android:id="@+id/SimplePast"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_margin="2dp"

                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:text="arise(s)"
                android:textColor="@color/black"
                android:textSize="11sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="17dp"
                android:layout_marginTop="17dp"
                android:background="@color/TextTitle" />

            <TextView
                android:id="@+id/PastPraticiple"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"

                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:text="arisen"
                android:textColor="@color/black"
                android:textSize="11sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="17dp"
                android:layout_marginTop="17dp"
                android:background="@color/TextTitle" />

            <TextView
                android:id="@+id/PresentParticiple"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"

                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:text="arising"
                android:textColor="@color/black"
                android:textSize="11sp" />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"/>
</LinearLayout>