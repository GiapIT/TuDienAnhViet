<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="50dp"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:background="@drawable/selectlistviewveb"
    android:paddingRight="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/SimplePresent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="3dp"
            android:text="arise"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="17dp"
            android:layout_marginTop="17dp"
            android:background="@color/TextTitle" />

        <TextView
            android:id="@+id/SimplePast"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_margin="2dp"

            android:layout_weight="1"
            android:gravity="center"
            android:padding="3dp"
            android:text="arise(s)"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="17dp"
            android:layout_marginTop="17dp"
            android:background="@color/TextTitle" />

        <TextView
            android:id="@+id/PastPraticiple"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"

            android:layout_weight="1"
            android:gravity="center"
            android:padding="3dp"
            android:text="arisen"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="17dp"
            android:layout_marginTop="17dp"
            android:background="@color/TextTitle" />

        <TextView
            android:id="@+id/PresentParticiple"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"

            android:layout_weight="1"
            android:gravity="center"
            android:padding="3dp"
            android:text="arising"
            android:textColor="@color/black"
            android:textSize="11sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/gray" />
</LinearLayout>