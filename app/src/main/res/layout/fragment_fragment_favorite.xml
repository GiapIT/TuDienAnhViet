<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="nguyengiap.vietitpro.tudienanhviet.com.fragment.FragmentFavorite">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cpb_grey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_60dp"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/title_activity_favorite"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18dp" />

            <ImageView
                android:background="@drawable/selectbutton_gray"
                android:layout_marginRight="@dimen/size_10dp"
                android:id="@+id/btnDeleteAll"
                android:layout_width="@dimen/size_30dp"
                android:layout_height="@dimen/size_30dp"
                android:src="@drawable/recycle" />


        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lvWord"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"></android.support.v7.widget.RecyclerView>


</LinearLayout>
